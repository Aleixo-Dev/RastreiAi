<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_details"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_airport_shuttle_24" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="Objeto em trÃ¢nsito - por favor aguarde"
        android:textColor="@color/app_primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_car"
        app:layout_constraintTop_toTopOf="@+id/img_car" />

    <View
        android:id="@+id/vertical_view"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/app_primary_color"
        android:backgroundTint="@color/app_primary_color"
        app:layout_constraintEnd_toEndOf="@+id/img_car"
        app:layout_constraintStart_toStartOf="@+id/img_car"
        app:layout_constraintTop_toBottomOf="@+id/img_car" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="24/06/2021"
        android:textColor="@color/app_primary_color"
        app:layout_constraintEnd_toEndOf="@+id/tv_state"
        app:layout_constraintTop_toBottomOf="@+id/tv_state" />

</androidx.constraintlayout.widget.ConstraintLayout>